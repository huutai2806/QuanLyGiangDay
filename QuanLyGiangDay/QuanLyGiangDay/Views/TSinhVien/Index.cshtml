@model IEnumerable<QuanLyGiangDay.Models.TSinhVien>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sinh viên</h1>

<p>
    <a asp-action="Create">Thêm</a>
</p>
<form method="get">
    <p>
        <input type="search" name="searchString" value="@ViewBag.CurrentFilter" />
        <input type="submit" value="Search" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HoSinhVien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenSinhVien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhaiNu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgaySinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaChi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaDanTocNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaLopNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaQueQuanNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaTonGiaoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoSinhVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSinhVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhaiNu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaDanTocNavigation.MaDanToc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaLopNavigation.MaLop)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaQueQuanNavigation.MaQueQuan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaTonGiaoNavigation.MaTonGiao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaSinhVien">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.MaSinhVien">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.MaSinhVien">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
