@model IEnumerable<QuanLyGiangDay.Models.TTonGiao>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tôn Giáo</h1>

<p>
    <a asp-action="Create">Thêm</a>
</p>
<form asp-controller="TTonGiao" asp-action="Index" method="get">
    <p>
        Tìm kiếm: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
        <input type="submit" value="Tìm kiếm" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaTonGiao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenTonGiao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaTonGiao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenTonGiao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaTonGiao">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.MaTonGiao">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.MaTonGiao">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
