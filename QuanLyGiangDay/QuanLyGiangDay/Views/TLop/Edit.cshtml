@model QuanLyGiangDay.Models.TLop

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sửa</h1>

<h4>TLop</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaLop" />
            <div class="form-group">
                <label asp-for="TenLop" class="control-label"></label>
                <input asp-for="TenLop" class="form-control" />
                <span asp-validation-for="TenLop" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaNganhHoc" class="control-label"></label>
                <input asp-for="MaNganhHoc" class="form-control" />
                <span asp-validation-for="MaNganhHoc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaGvcn" class="control-label"></label>
                <select asp-for="MaGvcn" class="form-control" asp-items="ViewBag.MaGvcn"></select>
                <span asp-validation-for="MaGvcn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu lại" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở về danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
