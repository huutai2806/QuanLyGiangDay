@model IEnumerable<QuanLyGiangDay.Models.TPhanCong>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Phân Công</h1>

<p>
    <a asp-action="Create">Thêm</a>
</p>
<form method="get" action="@Url.Action("TimKiem")">
    <div class="input-group mb-3">
        <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm" aria-label="Tìm kiếm" aria-describedby="basic-addon2">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit">Tìm kiếm</button>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HocKy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayBatDau)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayKetThuc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaGiaoVienNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaLopNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaMonHocNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HocKy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayBatDau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayKetThuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaGiaoVienNavigation.MaGiaoVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaLopNavigation.MaLop)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaMonHocNavigation.MaMonHoc)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaPhanCong">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.MaPhanCong">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.MaPhanCong">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
