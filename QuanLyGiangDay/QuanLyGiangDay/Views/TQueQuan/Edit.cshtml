@model QuanLyGiangDay.Models.TQueQuan

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sửa</h1>

<h4>TQueQuan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaQueQuan" />
            <div class="form-group">
                <label asp-for="TenTinhThanhPho" class="control-label"></label>
                <input asp-for="TenTinhThanhPho" class="form-control" />
                <span asp-validation-for="TenTinhThanhPho" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenQuanHuyen" class="control-label"></label>
                <input asp-for="TenQuanHuyen" class="form-control" />
                <span asp-validation-for="TenQuanHuyen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenPhuongXa" class="control-label"></label>
                <input asp-for="TenPhuongXa" class="form-control" />
                <span asp-validation-for="TenPhuongXa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu lại" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở về danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
